<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    tools:context=".AccountMangment">

    <TextView
        android:id="@+id/textViewBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Current Balance: $0"
        android:textColor="#000000"
        android:fontFamily="@font/hacen"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:textSize="27sp"
         />

    <EditText
        android:id="@+id/editTextWithdrawAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewBalance"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/roboto"
        android:hint="Enter Withdrawal Amount"
        android:inputType="numberDecimal"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnWithdraw"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/editTextWithdrawAmount"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/cornered_button"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="Withdraw"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/editTextDepositAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnWithdraw"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/roboto"
        android:hint="Enter Deposit Amount"
        android:inputType="numberDecimal"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnDeposit"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/editTextDepositAmount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/cornered_button"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="Deposit"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/cornered_button"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="25dp" />

</RelativeLayout>
